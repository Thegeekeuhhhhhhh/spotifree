{
  "name": "spotifree",
  "homepage": "https://thegeekeuhhhhhhh.github.io/spotifree/",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thegeekeuhhhhhhh/spotifree.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "npm run build && python -m PyInstaller --onefile .\\backend\\app.py --distpath .\\backend\\ && npm start",
    "electron:build": "npm run build && python -m PyInstaller --onefile .\\backend\\app.py --distpath .\\backend\\ && electron-builder",
    "start": "electron .",
    "dist": "electron-builder",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -r https://github.com/Thegeekeuhhhhhhh/spotifree.git"
  },
  "build": {
    "appId": "com.spotifree.desktop",
    "productName": "Spotifree",
    "asar": true,
    "files": [
      "main.js",
      "dist/index.html",
      "dist/assets/*",
      "backend/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "express": "^5.1.0",
    "gh-pages": "^6.3.0",
    "lucide-react": "^0.546.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "vite": "^7.1.7"
  }
}
